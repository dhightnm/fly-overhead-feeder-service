# Production Environment Variables for Lightsail Deployment
# Copy this to .env.production and fill in your values

# Server Configuration
PORT=3006
NODE_ENV=production
HOST=0.0.0.0

# Database (PostgreSQL on Lightsail or RDS)
# Format: postgresql://username:password@host:port/database
# Example for Lightsail: postgresql://postgres:yourpassword@your-db-instance.xxxxx.us-east-1.rds.amazonaws.com:5432/fly_overhead
POSTGRES_URL=postgresql://postgres:CHANGE_THIS@your-db-host:5432/fly_overhead
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=10

# Security (IMPORTANT: Change these in production!)
API_KEY_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET_AT_LEAST_32_CHARACTERS_LONG
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Data Processing
BATCH_SIZE=50
BATCH_INTERVAL_MS=1000
MAX_DATA_AGE_SECONDS=300

# Main Service Integration
# Update these to point to your main service URL
MAIN_SERVICE_URL=http://localhost:3005
MAIN_SERVICE_AIRCRAFT_ENDPOINT=/api/feeder/aircraft
MAIN_SERVICE_REGISTER_ENDPOINT=/api/feeder/register
MAIN_SERVICE_STATS_ENDPOINT=/api/feeder/stats
MAIN_SERVICE_LAST_SEEN_ENDPOINT=/api/feeder/last-seen
MAIN_SERVICE_AUTH_ENDPOINT=/api/feeder/me
MAIN_SERVICE_TIMEOUT_MS=5000

# Logging
LOG_LEVEL=info

# Setup Script (GitHub Raw URL)
SETUP_SCRIPT_GITHUB_URL=https://raw.githubusercontent.com/dhightnm/fly-overhead-feeder-service/master/setup-public-feeder.sh

# Setup Page URL (public-facing URL)
SETUP_URL=https://api.fly-overhead.com

